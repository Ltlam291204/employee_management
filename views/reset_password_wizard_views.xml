<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- View cho wizard đổi mật khẩu -->
        <record id="view_reset_password_wizard" model="ir.ui.view">
            <field name="name">employee.reset.password.wizard.form</field>
            <field name="model">employee.reset.password.wizard</field>
            <field name="arch" type="xml">
                <form string="Đổi Mật khẩu">
                    <group>
                        <group>
                            <field name="employee_id" readonly="1"/>
                            <field name="user_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="current_password_display" 
                                   string="Mật khẩu hiện tại"
                                   readonly="1"
                                   password="True"
                                   widget="password_display"/>
                        </group>
                    </group>
                    
                    <group>
                        <group>
                            <field name="new_password" 
                                   password="True" 
                                   placeholder="Nhập mật khẩu mới..."
                                   required="1"/>
                        </group>
                        <group>
                            <field name="confirm_password" 
                                   password="True" 
                                   placeholder="Nhập lại mật khẩu mới..."
                                   required="1"/>
                        </group>
                    </group>
                    
                    <footer>
                        <button name="action_confirm_reset" 
                                type="object" 
                                string="Xác nhận Đổi mật khẩu" 
                                class="btn-primary"/>
                        <button string="Hủy bỏ" 
                                class="btn-secondary" 
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Action cho wizard -->
        <record id="action_reset_password_wizard" model="ir.actions.act_window">
            <field name="name">Đổi Mật khẩu</field>
            <field name="res_model">employee.reset.password.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>